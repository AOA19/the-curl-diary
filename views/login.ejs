<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon.png" />
    <link rel="stylesheet" href="/css/output.css">
</head>
<body>
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">
        Log In to your Account
        </h2>
    </div>
    <div class="">
        <!-- Alert Message  -->
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el=> { %>
                <div class="p-4 my-4 m-auto text-sm text-red-800 text-center rounded-lg bg-red-50 w-1/4">
                    <%= el.msg %>
                </div>
                <% }) %>
                    <% } %>
                        <% if (locals.messages.info) { %>
                            <% messages.info.forEach( el=> { %>
                                <div class="p-4 my-4 m-auto text-sm text-red-800 text-center rounded-lg bg-red-50 w-1/4">
                                    <%= el.msg %>
                                </div>
                                    <% }) %>
                                        <% } %>
                                <!-- Login form -->
                                 <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
                                     <form action="/login" method="POST">
                                         <div class="mt-2">
                                             <label for="emailAdd" class="block text-sm/6 font-medium text-gray-900">
                                                 Email 
                                                </label>
                                                <input 
                                                type="email" 
                                                id="emailAdd"
                                                aria-describedby="emailHelp" 
                                                name="email" 
                                                class="block w-full rounded-md border-0 py-1.5 ps-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#8FAE24] sm:text-sm/6"
                                                
                                                />
                                            </div>
                                            <div class="mt-2">
                                                <label for="password" class="block text-sm/6 font-medium text-gray-900">Password</label>
                                                <input 
                                                    type="password" 
                                                    id="password"
                                                    name="password" 
                                                    class="block w-full rounded-md border-0 py-1.5 ps-4 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-[#8FAE24] sm:text-sm/6 mb-4" 
                                                   />
                                            </div>
                                            <button 
                                                type="submit" 
                                                class="flex w-full justify-center rounded-md bg-orchid px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-floral focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                                                Log In
                                            </button>
                                        </form>
                                        <p class="mt-10 text-center text-sm/6 text-gray-500">
                                            Need an account?
                                            <a href="/signup" class="font-semibold text-orchid hover:text-floral">Sign Up</a>
                                        </p>
                                        <p class="mt-2 text-center text-sm/6 text-gray-500">
                                            Back to
                                            <a href="/" class="font-semibold text-orchid hover:text-floral">Home</a>
                                        </p>
                                </div>
    </div>
</div>
<%- include('partials/footer') -%>